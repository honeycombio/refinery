[Unit]
Description=Samproxy Honeycomb Trace-Aware Sampling Proxy
After=network.target

[Service]
ExecStart=/usr/bin/samproxy -c /etc/samproxy/samproxy.toml -r /etc/samproxy/rules.toml
KillMode=process
Restart=on-failure
User=honeycomb
Group=honeycomb
LimitNOFILE=infinity

[Install]
Alias=samproxy samproxy.service
